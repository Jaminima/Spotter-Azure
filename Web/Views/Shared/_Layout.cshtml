@model Model.Models.Spotify

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootswatch@4.6.0/dist/lux/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="~/css/site.css" />
</head>

<body>
    <header>

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <a class="navbar-brand" href="#">Spotter</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item @(ViewData["Title"].Equals("Spotter") ? "active" : "" )">
                        <a class="nav-link" href="/">
                            Home
                        </a>
                    </li>
                    <li class="nav-item @(ViewData["Title"].Equals("Log") ? "active" : "" )">
                        <a class="nav-link" href="/log">
                            Log
                        </a>
                    </li>
                    <li class="nav-item @(ViewData["Title"].Equals("Insights") ? "active" : "" )">
                        <a class="nav-link" href="/insights">
                            Insights
                        </a>
                    </li>
                    <li class="nav-item @(ViewData["Title"].Equals("Settings") ? "active" : "" )">
                        <a class="nav-link" href="/settings">
                            Settings
                        </a>
                    </li>
                </ul>
                @{
                    if (Model == null)
                    {
                        <form class="form-inline my-2 my-lg-0">
                            <button class="btn btn-success" type="button" onclick="location.href='https://accounts.spotify.com/authorize?client_id=1a014c85f7ec48d38ba647f5d7717cf9&response_type=code&redirect_uri=https://spotter-azure20210220175723.azurewebsites.net/api/register&scope=user-read-playback-state%20playlist-modify-public%20playlist-modify-private%20user-read-currently-playing%20user-library-modify%20user-read-playback-position%20playlist-read-private%20user-library-read%20user-modify-playback-state';">Sign in</button>
                        </form>
                    }
                    else
                    {
                        <form class="form-inline my-2 my-lg-0" action="/">
                            <button class="btn btn-danger" type="submit">Log Out</button>
                            <input type="text" id="clearcookies" name="clearcookies" value="true" hidden>
                        </form>
                    }
                }
            </div>
        </nav>
    </header>
    <div class="jumbotron">
        <h1 class="display-3">@ViewData["Title"]</h1>
        <p class="lead">@ViewData["Desc"]</p>
        <hr class="my-4">
        @RenderBody()
    </div>

    <footer class="bg-primary text-center text-lg-start" style="position:fixed; bottom:0; min-width: 100vw;">
        <div class="text-center p-3" style="display: inline-flex">
            <a class="text-light footer-item" href="https://github.com/Jaminima/Spotter-Azure" target="_blank">Github</a>
            <a class="text-light footer-item" href="https://www.linkedin.com/in/oscar-davies/" target="_blank">LinkedIn</a>
        </div>
    </footer>

    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
