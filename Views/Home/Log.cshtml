@{
    ViewData["Title"] = "Log";
    ViewData["Desc"] = "View event logs of the application";

    int Successes = Log._history.Count(x => x.error == LogError.Success);
    int Failures = Log._history.Count(x => x.error == LogError.Failure);
    int Warnings = Log._history.Count(x => x.error == LogError.Warning);
    int Infos = Log._history.Count(x => x.error == LogError.Info);
    float total = Successes + Failures + Warnings + Infos;
    total /= 100.0f;
}

<div class="card border-primary">
    <div class="progress">
        <div class="progress-bar bg-success" role="progressbar" style="width: @(Successes/total)%;" aria-valuenow="15" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-danger" role="progressbar" style="width: @(Failures/total)%;" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-warning" role="progressbar" style="width: @(Warnings/total)%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
        <div class="progress-bar bg-info" role="progressbar" style="width: @(Infos/total)%;" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div>
    </div>

    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">State</th>
                <th scope="col">When</th>
                <th scope="col">Message</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (LogEntry logEntry in Log._history)
                {
                    <tr class="@(Log.GetRowColor(logEntry)) ">
                        <th scope="row">@logEntry.error</th>
                        <td>@logEntry.when</td>
                        <td>@logEntry.message</td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>
